<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.AlimentacaoActivity">


    <TextView
        android:id="@+id/alimentacao_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Alimentação"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/alimentacao_saudavel"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="80dp"/>

    <TextView
        android:id="@+id/alimento_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Qual alimento você consumiu?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Alimento_editview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginVertical="220dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/desAlimento_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Descreva sobre o alimento consumido. "
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/descAlimento_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="340dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="30"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/calorias_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Calorias do Alimento?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/calorias_editview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="440dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="500dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Enviar" />


</RelativeLayout>